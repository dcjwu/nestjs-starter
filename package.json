{
  "name": "nestjs-starter",
  "version": "0.0.1",
  "description": "",
  "author": "aleksejs@kucenko.dev",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:dry": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "format": "prettier --write './**/*.{js,ts,md,json}' --config ./.prettierrc",
    "format:dry": "prettier --check './**/*.{js,ts,md,json}' --config ./.prettierrc",
    "test": "dotenv -e .env.test -- jest --watchAll=false",
    "test:cov": "dotenv -e .env.test -- jest --coverage . --watchAll=false",
    "test:ci": "dotenv -e .env.test -- jest --coverage . --watchAll=false --runInBand",
    "prepare": "husky",
    "services:up": "docker compose up -d --force-recreate",
    "services:down": "docker compose down",
    "services:connect:database": "docker exec -it database sh -c \"psql -U root -d database_name\"",
    "database:migrate": "dotenv -e .env.local -- npx prisma migrate dev",
    "database:seed": "dotenv -e .env.local -- npx prisma db seed"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^6.2.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.6",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.0.0",
    "prisma": "^6.2.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed/_seed.ts"
  }
}
